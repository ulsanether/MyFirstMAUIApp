<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                      Dark={StaticResource DarkBackground}}">
    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="1000"
            Spacing="16">

            <!--  Page Header  -->
            <VerticalStackLayout Spacing="4">
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="통신 대시보드"
                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                Dark={StaticResource DarkForeground}}" />
                <Label
                    FontSize="14"
                    Text="시리얼 및 모드버스 통신 관리"
                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                Dark={StaticResource DarkMutedForeground}}" />
            </VerticalStackLayout>
            <!--  Connection Type Selection Card  -->
            <Border
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                Stroke="{AppThemeBinding Light={StaticResource Border},
                                         Dark={StaticResource DarkBorder}}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <VerticalStackLayout Spacing="16">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="통신 타입 선택"
                        TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                    Dark={StaticResource DarkForeground}}" />

                    <!--  Serial Option  -->
                    <Border
                        Padding="12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Secondary},
                                                          Dark={StaticResource DarkSecondary}}"
                        Stroke="{AppThemeBinding Light={StaticResource Border},
                                                 Dark={StaticResource DarkBorder}}"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <HorizontalStackLayout Spacing="12">
                            <RadioButton
                                GroupName="SerialType"
                                IsChecked="{Binding IsNormalModeSelected}"
                                VerticalOptions="Center" />
                            <Border
                                Padding="8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Accent},
                                                                  Dark={StaticResource DarkAccent}}"
                                StrokeShape="RoundRectangle 6"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                                <Label
                                    FontFamily="MaterialIcons"
                                    FontSize="20"
                                    Text="&#xe1c0;"
                                    TextColor="{AppThemeBinding Light={StaticResource AccentForeground},
                                                                Dark={StaticResource DarkAccentForeground}}"
                                    VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label
                                    FontSize="16"
                                    Text="시리얼 통신"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                                <Label
                                    FontSize="12"
                                    Text="RS-232, RS-485"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!--  Modbus Option  -->
                    <Border
                        Padding="12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Secondary},
                                                          Dark={StaticResource DarkSecondary}}"
                        Stroke="{AppThemeBinding Light={StaticResource Border},
                                                 Dark={StaticResource DarkBorder}}"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1">
                        <HorizontalStackLayout Spacing="12">
                            <RadioButton
                                GroupName="SerialType"
                                IsChecked="{Binding IsModbusModeSelected}"
                                VerticalOptions="Center" />
                            <Border
                                Padding="8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Accent},
                                                                  Dark={StaticResource DarkAccent}}"
                                StrokeShape="RoundRectangle 6"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                                <Label
                                    FontFamily="MaterialIcons"
                                    FontSize="20"
                                    Text="&#xe1c0;"
                                    TextColor="{AppThemeBinding Light={StaticResource AccentForeground},
                                                                Dark={StaticResource DarkAccentForeground}}"
                                    VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                <Label
                                    FontSize="16"
                                    Text="모드버스 통신"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                                <Label
                                    FontSize="12"
                                    Text="RTU (RS-232/485), ASCII"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!--  Connection Control Card  -->
            <Border
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                Stroke="{AppThemeBinding Light={StaticResource Border},
                                         Dark={StaticResource DarkBorder}}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <VerticalStackLayout Spacing="16">
                    <!--  Header  -->
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="연결 상태"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="12"
                                Text="{Binding ConnectionTypeText}"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Border
                            Grid.Column="1"
                            Padding="8,4"
                            BackgroundColor="{Binding StatusBorderColor}"
                            Stroke="{Binding StatusBorderColor}"
                            StrokeShape="RoundRectangle 6"
                            StrokeThickness="1"
                            VerticalOptions="Center">
                            <Label
                                FontSize="12"
                                Text="{Binding StatusText}"
                                TextColor="{DynamicResource White}" />
                        </Border>
                    </Grid>

                    <!--  Connection Info  -->
                    <Border
                        Padding="12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Muted},
                                                          Dark={StaticResource DarkMuted}}"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <Label
                                    Grid.Column="0"
                                    FontSize="14"
                                    Text="포트:"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="14"
                                    Text="{Binding PortName}"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                <Label
                                    Grid.Column="0"
                                    FontSize="14"
                                    Text="Baud Rate:"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="14"
                                    Text="{Binding BaudRate}"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                            </Grid>
                            <Grid
                                ColumnDefinitions="*,Auto"
                                ColumnSpacing="8"
                                IsVisible="{Binding IsSerialMode}">
                                <Label
                                    Grid.Column="0"
                                    FontSize="14"
                                    Text="Data Bits:"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="14"
                                    Text="{Binding DataBits}"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                            </Grid>
                            <Grid
                                ColumnDefinitions="*,Auto"
                                ColumnSpacing="8"
                                IsVisible="{Binding IsModbusMode}">
                                <Label
                                    Grid.Column="0"
                                    FontSize="14"
                                    Text="프로토콜:"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="14"
                                    Text="{Binding ModbusProtocol}"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                            </Grid>
                            <Grid
                                ColumnDefinitions="*,Auto"
                                ColumnSpacing="8"
                                IsVisible="{Binding IsModbusMode}">
                                <Label
                                    Grid.Column="0"
                                    FontSize="14"
                                    Text="슬레이브 ID:"
                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                Dark={StaticResource DarkMutedForeground}}" />
                                <Label
                                    Grid.Column="1"
                                    FontSize="14"
                                    Text="{Binding SlaveId}"
                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                Dark={StaticResource DarkForeground}}" />
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!--  Connect Button  -->
                    <HorizontalStackLayout Spacing="10">
                        <Button
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                                              Dark={StaticResource DarkPrimary}}"
                            Command="{Binding ConnectCommand}"
                            FontSize="16"
                            HeightRequest="48"
                            IsEnabled="{Binding CanConnect}"
                            Text="연결"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryForeground},
                                                        Dark={StaticResource DarkPrimaryForeground}}">
                            <Button.ImageSource>
                                <FontImageSource
                                    FontFamily="MaterialIcons"
                                    Glyph="&#xe63c;"
                                    Size="20"
                                    Color="{AppThemeBinding Light={StaticResource PrimaryForeground},
                                                            Dark={StaticResource DarkPrimaryForeground}}" />
                            </Button.ImageSource>
                        </Button>
                        <Button
                            BackgroundColor="{AppThemeBinding Light={StaticResource Destructive},
                                                              Dark={StaticResource DarkDestructive}}"
                            Command="{Binding DisconnectCommand}"
                            FontSize="16"
                            HeightRequest="48"
                            IsEnabled="{Binding CanDisconnect}"
                            Text="해제"
                            TextColor="{AppThemeBinding Light={StaticResource DestructiveForeground},
                                                        Dark={StaticResource DarkDestructiveForeground}}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!--  Activity Log Card  -->
            <Border
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                Stroke="{AppThemeBinding Light={StaticResource Border},
                                         Dark={StaticResource DarkBorder}}"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1">
                <VerticalStackLayout Spacing="12">
                    <HorizontalStackLayout Spacing="8">
                        <Label
                            FontFamily="MaterialIcons"
                            FontSize="20"
                            Text="&#xe1b8;"
                            TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                        Dark={StaticResource DarkPrimary}}"
                            VerticalOptions="Center" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="최근 활동"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <CollectionView ItemsSource="{Binding ActivityLog}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="0,0,0,8"
                                    Padding="8"
                                    BackgroundColor="{Binding BackgroundColor}"
                                    StrokeShape="RoundRectangle 6"
                                    StrokeThickness="0">
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                        <Label
                                            Grid.Column="0"
                                            FontSize="12"
                                            Text="{Binding Time}"
                                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                        Dark={StaticResource DarkMutedForeground}}"
                                            VerticalOptions="Start" />
                                        <Label
                                            Grid.Column="1"
                                            FontSize="14"
                                            Text="{Binding Message}"
                                            TextColor="{Binding MessageColor}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!--  Quick Stats  -->
       
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

