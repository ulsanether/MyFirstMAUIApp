<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Note: For Android please see also Platforms\Android\Resources\values\colors.xml  -->

    <!--  Light Theme Colors (Based on Figma Design)  -->
    <Color x:Key="Background">#F9FAFB</Color>
    <Color x:Key="Foreground">#111827</Color>
    <Color x:Key="Card">#ffffff</Color>
    <Color x:Key="CardForeground">#111827</Color>
    <Color x:Key="Popover">#ffffff</Color>
    <Color x:Key="PopoverForeground">#111827</Color>
    <Color x:Key="Primary">#FACC15</Color>
    <Color x:Key="PrimaryForeground">#111827</Color>
    <Color x:Key="Secondary">#F3F4F6</Color>
    <Color x:Key="SecondaryForeground">#111827</Color>
    <Color x:Key="Muted">#F3F4F6</Color>
    <Color x:Key="MutedForeground">#6B7280</Color>
    <Color x:Key="Accent">#FEF3C7</Color>
    <Color x:Key="AccentForeground">#111827</Color>
    <Color x:Key="Destructive">#EF4444</Color>
    <Color x:Key="DestructiveForeground">#ffffff</Color>
    <Color x:Key="Border">#E5E7EB</Color>
    <Color x:Key="Input">#E5E7EB</Color>
    <Color x:Key="InputBackground">#ffffff</Color>
    <Color x:Key="Ring">#FACC15</Color>

    <!--  Dark Theme Colors (Based on Figma Design)  -->
    <Color x:Key="DarkBackground">#111827</Color>
    <Color x:Key="DarkForeground">#F9FAFB</Color>
    <Color x:Key="DarkCard">#1F2937</Color>
    <Color x:Key="DarkCardForeground">#F9FAFB</Color>
    <Color x:Key="DarkPopover">#1F2937</Color>
    <Color x:Key="DarkPopoverForeground">#F9FAFB</Color>
    <Color x:Key="DarkPrimary">#FACC15</Color>
    <Color x:Key="DarkPrimaryForeground">#111827</Color>
    <Color x:Key="DarkSecondary">#374151</Color>
    <Color x:Key="DarkSecondaryForeground">#F9FAFB</Color>
    <Color x:Key="DarkMuted">#374151</Color>
    <Color x:Key="DarkMutedForeground">#9CA3AF</Color>
    <Color x:Key="DarkAccent">#4B5563</Color>
    <Color x:Key="DarkAccentForeground">#FACC15</Color>
    <Color x:Key="DarkDestructive">#EF4444</Color>
    <Color x:Key="DarkDestructiveForeground">#ffffff</Color>
    <Color x:Key="DarkBorder">#374151</Color>
    <Color x:Key="DarkInput">#374151</Color>
    <Color x:Key="DarkInputBackground">#1F2937</Color>
    <Color x:Key="DarkRing">#FACC15</Color>

    <!--  Chart Colors  -->
    <Color x:Key="Chart1">#FACC15</Color>
    <Color x:Key="Chart2">#EAB308</Color>
    <Color x:Key="Chart3">#9CA3AF</Color>
    <Color x:Key="Chart4">#6B7280</Color>
    <Color x:Key="Chart5">#4B5563</Color>

    <!--  Sidebar Colors  -->
    <Color x:Key="Sidebar">#ffffff</Color>
    <Color x:Key="SidebarForeground">#111827</Color>
    <Color x:Key="SidebarPrimary">#FACC15</Color>
    <Color x:Key="SidebarPrimaryForeground">#111827</Color>
    <Color x:Key="SidebarAccent">#FEF3C7</Color>
    <Color x:Key="SidebarAccentForeground">#111827</Color>
    <Color x:Key="SidebarBorder">#E5E7EB</Color>

    <!--  Dark Sidebar Colors  -->
    <Color x:Key="DarkSidebar">#1F2937</Color>
    <Color x:Key="DarkSidebarForeground">#F9FAFB</Color>
    <Color x:Key="DarkSidebarPrimary">#FACC15</Color>
    <Color x:Key="DarkSidebarPrimaryForeground">#111827</Color>
    <Color x:Key="DarkSidebarAccent">#374151</Color>
    <Color x:Key="DarkSidebarAccentForeground">#F9FAFB</Color>
    <Color x:Key="DarkSidebarBorder">#374151</Color>

    <!--  Existing Colors (Updated to match Figma design)  -->
    <Color x:Key="YellowPrimary">#FACC15</Color>
    <Color x:Key="YellowLight">#FEF3C7</Color>
    <Color x:Key="YellowDark">#EAB308</Color>
    <Color x:Key="Gray50">#F9FAFB</Color>

    <Color x:Key="Green500">#10B981</Color>
    <Color x:Key="Blue600">#2563EB</Color>
    <Color x:Key="Red500">#EF4444</Color>

    <!--  Updated Gray Scale  -->
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>

    <!--  Legacy Colors (유지)  -->
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!--  SolidColorBrush Resources  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource DarkPrimary}}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource DarkSecondary}}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{AppThemeBinding Light={StaticResource Background}, Dark={StaticResource DarkBackground}}" />
    <SolidColorBrush x:Key="CardBrush" Color="{AppThemeBinding Light={StaticResource Card}, Dark={StaticResource DarkCard}}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

    <!--  Legacy Brushes (유지)  -->
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}" />

</ResourceDictionary>
