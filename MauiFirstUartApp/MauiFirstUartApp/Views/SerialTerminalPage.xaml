<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.Views.SerialTerminalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SerialTerminalPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="800"
            Spacing="16">

            <!--  Header  -->
            <HorizontalStackLayout Spacing="8">
                <Image
                    HeightRequest="24"
                    Source="appiconw.png"
                    WidthRequest="24" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="시리얼 통신" />
            </HorizontalStackLayout>

            <!--  Connection Status  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource YellowLight},
                                                  Dark={StaticResource DarkAccent}}"
                BorderColor="{AppThemeBinding Light={StaticResource YellowPrimary},
                                              Dark={StaticResource DarkPrimary}}"
                CornerRadius="12"
                HasShadow="False">
                <HorizontalStackLayout Spacing="8">
                    <BoxView
                        CornerRadius="4"
                        HeightRequest="8"
                        WidthRequest="8"
                        Color="{Binding IsConnected, Converter={StaticResource BoolToConnectionColorConverter}}" />
                    <Label
                        FontSize="12"
                        Text="{Binding StatusText}"
                        TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                    Dark={StaticResource DarkForeground}}" />
                </HorizontalStackLayout>
            </Frame>

            <!--  Send Data Card  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="데이터 전송"
                        TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                    Dark={StaticResource DarkForeground}}" />

                    <Editor
                        BackgroundColor="{AppThemeBinding Light={StaticResource InputBackground},
                                                          Dark={StaticResource DarkInputBackground}}"
                        HeightRequest="100"
                        Placeholder="전송할 데이터를 입력하세요..."
                        PlaceholderColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                           Dark={StaticResource DarkMutedForeground}}"
                        Text="{Binding SendText}"
                        TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                    Dark={StaticResource DarkForeground}}" />

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <Button
                            Grid.Column="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                                              Dark={StaticResource DarkPrimary}}"
                            Command="{Binding SendCommand}"
                            Text="전송"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryForeground},
                                                        Dark={StaticResource DarkPrimaryForeground}}" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding ClearMessageCommand}"
                            Text="지우기"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Quick Send Buttons  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="빠른 전송"
                        TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                    Dark={StaticResource DarkForeground}}" />
                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="8"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="8">
                        <Button
                            Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="AT"
                            Text="AT"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="AT+RST"
                            Text="AT+RST"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="STATUS?"
                            Text="STATUS?"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="VERSION?"
                            Text="VERSION?"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>


            <!--  Communication Log  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="통신 로그"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                          Dark={StaticResource DarkBorder}}"
                            BorderWidth="1"
                            Command="{Binding ClearLogsCommand}"
                            Text="🗑️"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}"
                            WidthRequest="40" />
                    </Grid>

                    <Frame
                        Padding="12"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Muted},
                                                          Dark={StaticResource DarkMuted}}"
                        CornerRadius="8"
                        HasShadow="False"
                        HeightRequest="300">
                        <ScrollView>
                            <CollectionView ItemsSource="{Binding SerialLogItems}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,4"
                                            Padding="8"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                                              Dark={StaticResource DarkCard}}"
                                            BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                                          Dark={StaticResource DarkBorder}}"
                                            CornerRadius="4"
                                            HasShadow="False">
                                            <HorizontalStackLayout Spacing="12">
                                                <Label
                                                    FontSize="10"
                                                    Text="{Binding FormattedTimestamp}"
                                                    TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                                                Dark={StaticResource DarkMutedForeground}}"
                                                    WidthRequest="60" />
                                                <Label
                                                    FontSize="12"
                                                    Text="{Binding TypeLabel}"
                                                    TextColor="{Binding TypeColor}" />
                                                <Label
                                                    FontSize="12"
                                                    LineBreakMode="WordWrap"
                                                    Text="{Binding Message}"
                                                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                                                Dark={StaticResource DarkForeground}}" />
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!--  Statistics  -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <Frame
                    Grid.Column="0"
                    Padding="12"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                      Dark={StaticResource DarkCard}}"
                    BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                  Dark={StaticResource DarkBorder}}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SendCount}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="송신 횟수"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="1"
                    Padding="12"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                      Dark={StaticResource DarkCard}}"
                    BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                  Dark={StaticResource DarkBorder}}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ReceiveCount}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="수신 횟수"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="2"
                    Padding="12"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                      Dark={StaticResource DarkCard}}"
                    BorderColor="{AppThemeBinding Light={StaticResource Border},
                                                  Dark={StaticResource DarkBorder}}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding TotalLogCount}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="전체 로그"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
