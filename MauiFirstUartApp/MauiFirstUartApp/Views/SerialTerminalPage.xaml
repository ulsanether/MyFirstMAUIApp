<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.Views.SerialTerminalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SerialTerminalPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="800"
            Spacing="16">

            <!--  Header  -->
            <HorizontalStackLayout Spacing="8">
                <Image
                    HeightRequest="24"
                    Source="cable_icon.png"
                    WidthRequest="24" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="시리얼 통신" />
            </HorizontalStackLayout>

            <!--  Connection Status  -->
            <Frame
                Padding="16"
                BackgroundColor="{StaticResource YellowLight}"
                BorderColor="{StaticResource YellowPrimary}"
                CornerRadius="12"
                HasShadow="False">
                <HorizontalStackLayout Spacing="8">
                    <BoxView
                        CornerRadius="4"
                        HeightRequest="8"
                        WidthRequest="8"
                        Color="{Binding IsConnected, Converter={StaticResource BoolToConnectionColorConverter}}" />
                    <Label FontSize="12" Text="{Binding StatusText}" />
                </HorizontalStackLayout>
            </Frame>

            <!--  Send Data Card  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="데이터 전송" />

                    <Editor
                        BackgroundColor="{StaticResource Gray50}"
                        HeightRequest="100"
                        Placeholder="전송할 데이터를 입력하세요..."
                        Text="{Binding SendText}" />

                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <Button
                            Grid.Column="0"
                            BackgroundColor="{StaticResource YellowPrimary}"
                            Command="{Binding SendCommand}"
                            Text="전송"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding ClearMessageCommand}"
                            Text="지우기"
                            TextColor="{StaticResource Gray900}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Quick Send Buttons  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="빠른 전송" />
                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="8"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="8">
                        <Button
                            Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="AT"
                            Text="AT"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="AT+RST"
                            Text="AT+RST"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="STATUS?"
                            Text="STATUS?"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding QuickSendCommand}"
                            CommandParameter="VERSION?"
                            Text="VERSION?"
                            TextColor="{StaticResource Gray900}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Communication Log  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="통신 로그" />
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            Command="{Binding ClearLogsCommand}"
                            Text="🗑️"
                            WidthRequest="40" />
                    </Grid>

                    <Frame
                        Padding="12"
                        BackgroundColor="{StaticResource Gray50}"
                        CornerRadius="8"
                        HasShadow="False"
                        HeightRequest="300">
                        <ScrollView>
                            <CollectionView ItemsSource="{Binding SerialLogItems}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,4"
                                            Padding="8"
                                            BackgroundColor="White"
                                            CornerRadius="4"
                                            HasShadow="False">
                                            <HorizontalStackLayout Spacing="12">
                                                <Label
                                                    FontSize="10"
                                                    Text="{Binding FormattedTimestamp}"
                                                    TextColor="{StaticResource Gray600}"
                                                    WidthRequest="60" />
                                                <Label
                                                    FontSize="12"
                                                    Text="{Binding TypeLabel}"
                                                    TextColor="{Binding TypeColor}" />
                                                <Label
                                                    FontSize="12"
                                                    LineBreakMode="WordWrap"
                                                    Text="{Binding Message}" />
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!--  Statistics  -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <Frame
                    Grid.Column="0"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SendCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="송신 횟수"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="1"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ReceiveCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="수신 횟수"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="2"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding TotalLogCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="전체 로그"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
