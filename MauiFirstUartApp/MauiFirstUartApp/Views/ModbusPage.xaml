<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.Views.ModbusPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ModbusPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="800"
            Spacing="16">

            <!--  Header  -->
            <HorizontalStackLayout Spacing="8">
                <Image
                    HeightRequest="24"
                    Source="network_icon.png"
                    WidthRequest="24" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="모드버스 통신" />
            </HorizontalStackLayout>

            <!--  Connection Status  -->
            <Frame
                Padding="16"
                BackgroundColor="{StaticResource YellowLight}"
                BorderColor="{StaticResource YellowPrimary}"
                CornerRadius="12"
                HasShadow="False">
                <HorizontalStackLayout Spacing="8">
                    <BoxView
                        CornerRadius="4"
                        HeightRequest="8"
                        WidthRequest="8"
                        Color="{StaticResource Green500}" />
                    <Label FontSize="12" Text="{Binding StatusText}" />
                </HorizontalStackLayout>
            </Frame>

            <!--  Data Table Card  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <!--  Header  -->
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <HorizontalStackLayout Spacing="8">
                            <Image
                                HeightRequest="20"
                                Source="table_icon.png"
                                WidthRequest="20" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="데이터 테이블" />
                        </HorizontalStackLayout>
                        <Button
                            Grid.Column="1"
                            Margin="0,0,8,0"
                            BackgroundColor="Transparent"
                            Text="📥 CSV" />
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            Text="🗑️"
                            WidthRequest="40" />
                    </Grid>

                    <!--  Auto Read Controls  -->
                    <Frame
                        Padding="12"
                        BackgroundColor="{StaticResource Gray50}"
                        CornerRadius="8"
                        HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Switch
                                x:Name="AutoReadSwitch"
                                IsToggled="{Binding IsAutoReadEnabled}"
                                OnColor="{StaticResource YellowPrimary}" />
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="14"
                                    Text="자동 읽기" />
                                <Label
                                    FontSize="11"
                                    Text="설정된 간격으로 자동 데이터 수집"
                                    TextColor="{StaticResource Gray600}" />
                            </VerticalStackLayout>
                            <Picker
                                x:Name="IntervalPicker"
                                Grid.Column="2"
                                ItemsSource="{Binding PollingIntervalOptions}"
                                SelectedItem="{Binding SelectedPollingInterval}"
                                WidthRequest="120" />
                        </Grid>
                    </Frame>

                    <!--  Table  -->
                    <Frame
                        Padding="0"
                        BorderColor="{StaticResource Gray200}"
                        CornerRadius="8"
                        HasShadow="False"
                        HeightRequest="400">
                        <Grid RowDefinitions="Auto,*">
                            <!--  Table Header  -->
                            <Grid
                                Grid.Row="0"
                                Padding="8,12"
                                BackgroundColor="{StaticResource Gray50}"
                                ColumnDefinitions="60,100,80,100,120,120,100">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="Center"
                                    Text="ID" />
                                <Label
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    Text="시간" />
                                <Label
                                    Grid.Column="2"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="Center"
                                    Text="주소" />
                                <Label
                                    Grid.Column="3"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="Center"
                                    Text="기능코드" />
                                <Label
                                    Grid.Column="4"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="End"
                                    Text="값 (10진수)" />
                                <Label
                                    Grid.Column="5"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="End"
                                    Text="값 (16진수)" />
                                <Label
                                    Grid.Column="6"
                                    FontAttributes="Bold"
                                    FontSize="11"
                                    HorizontalTextAlignment="Center"
                                    Text="타입" />
                            </Grid>

                            <!--  Table Body  -->
                            <ScrollView Grid.Row="1">
                                <CollectionView x:Name="DataTableCollection" ItemsSource="{Binding ModbusDataItems}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                                Padding="8,12"
                                                BackgroundColor="White"
                                                ColumnDefinitions="60,100,80,100,120,120,100">
                                                <Label
                                                    Grid.Column="0"
                                                    FontSize="11"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding Id}"
                                                    TextColor="{StaticResource Gray600}" />
                                                <Label
                                                    Grid.Column="1"
                                                    FontSize="11"
                                                    Text="{Binding FormattedTimestamp}" />
                                                <Frame
                                                    Grid.Column="2"
                                                    Padding="6,2"
                                                    BackgroundColor="#DBEAFE"
                                                    CornerRadius="4"
                                                    HasShadow="False">
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalTextAlignment="Center"
                                                        Text="{Binding Address}"
                                                        TextColor="#1E40AF" />
                                                </Frame>
                                                <Label
                                                    Grid.Column="3"
                                                    FontSize="11"
                                                    HorizontalTextAlignment="Center"
                                                    Text="{Binding FunctionCode}" />
                                                <Label
                                                    Grid.Column="4"
                                                    FontFamily="Courier"
                                                    FontSize="11"
                                                    HorizontalTextAlignment="End"
                                                    Text="{Binding Value}" />
                                                <Label
                                                    Grid.Column="5"
                                                    FontFamily="Courier"
                                                    FontSize="11"
                                                    HorizontalTextAlignment="End"
                                                    Text="{Binding HexValue}"
                                                    TextColor="#9333EA" />
                                                <Frame
                                                    Grid.Column="6"
                                                    Padding="6,2"
                                                    BackgroundColor="{StaticResource Gray100}"
                                                    CornerRadius="4"
                                                    HasShadow="False">
                                                    <Label
                                                        FontSize="10"
                                                        HorizontalTextAlignment="Center"
                                                        Text="{Binding DataType}"
                                                        TextColor="{StaticResource Gray700}" />
                                                </Frame>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </ScrollView>
                        </Grid>
                    </Frame>

                    <!--  Table Stats  -->
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <Frame
                            Grid.Column="0"
                            Padding="8"
                            BackgroundColor="{StaticResource Gray50}"
                            CornerRadius="8"
                            HasShadow="False">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                                <Label
                                    FontSize="10"
                                    HorizontalTextAlignment="Center"
                                    Text="총 레코드"
                                    TextColor="{StaticResource Gray600}" />
                                <Label
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding ModbusDataItems.Count}"
                                    TextColor="{StaticResource Gray700}" />
                            </VerticalStackLayout>
                        </Frame>
                        <Frame
                            Grid.Column="1"
                            Padding="8"
                            BackgroundColor="{StaticResource Gray50}"
                            CornerRadius="8"
                            HasShadow="False">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                                <Label
                                    FontSize="10"
                                    HorizontalTextAlignment="Center"
                                    Text="최근 주소"
                                    TextColor="{StaticResource Gray600}" />
                                <Label
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding ModbusAddress}"
                                    TextColor="{StaticResource Blue600}" />
                            </VerticalStackLayout>
                        </Frame>
                        <Frame
                            Grid.Column="2"
                            Padding="8"
                            BackgroundColor="{StaticResource Gray50}"
                            CornerRadius="8"
                            HasShadow="False">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                                <Label
                                    FontSize="10"
                                    HorizontalTextAlignment="Center"
                                    Text="최근 값"
                                    TextColor="{StaticResource Gray600}" />
                                <Label
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding WriteValue}"
                                    TextColor="{StaticResource YellowDark}" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Read/Write Operations  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <!--  Tabs  -->
                    <Grid
                        Padding="4"
                        BackgroundColor="{StaticResource Gray100}"
                        ColumnDefinitions="*,*"
                        ColumnSpacing="4"
                        HeightRequest="40">
                        <Button
                            x:Name="ReadTabButton"
                            Grid.Column="0"
                            BackgroundColor="White"
                            Clicked="OnReadTabClicked"
                            CornerRadius="6"
                            Text="읽기"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            x:Name="WriteTabButton"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            Clicked="OnWriteTabClicked"
                            CornerRadius="6"
                            Text="쓰기"
                            TextColor="{StaticResource Gray600}" />
                    </Grid>

                    <!--  Read Content  -->
                    <VerticalStackLayout x:Name="ReadContent" Spacing="12">
                        <VerticalStackLayout Spacing="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="기능 코드" />
                            <Picker
                                x:Name="ReadFunctionPicker"
                                ItemsSource="{Binding ReadFunctionOptions}"
                                SelectedItem="{Binding SelectedReadFunction}" />
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                            <VerticalStackLayout Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="슬레이브 ID" />
                                <Entry Keyboard="Numeric" Text="{Binding ModbusSlaveId}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="시작 주소" />
                                <Entry Keyboard="Numeric" Text="{Binding ModbusAddress}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="레지스터 개수" />
                                <Entry Keyboard="Numeric" Text="{Binding ModbusQuantity}" />
                            </VerticalStackLayout>
                        </Grid>

                        <Button
                            BackgroundColor="{StaticResource YellowPrimary}"
                            Command="{Binding ModbusReadCommand}"
                            Text="읽기 실행"
                            TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>

                    <!--  Write Content (Initially Hidden)  -->
                    <VerticalStackLayout
                        x:Name="WriteContent"
                        IsVisible="False"
                        Spacing="12">
                        <VerticalStackLayout Spacing="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="기능 코드" />
                            <Picker
                                x:Name="WriteFunctionPicker"
                                ItemsSource="{Binding WriteFunctionOptions}"
                                SelectedItem="{Binding SelectedWriteFunction}" />
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <VerticalStackLayout Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="슬레이브 ID" />
                                <Entry Keyboard="Numeric" Text="{Binding ModbusSlaveId}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="8">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    Text="시작 주소" />
                                <Entry Keyboard="Numeric" Text="{Binding ModbusAddress}" />
                            </VerticalStackLayout>
                        </Grid>

                        <VerticalStackLayout Spacing="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="값" />
                            <Entry
                                Keyboard="Numeric"
                                Placeholder="예: 1234"
                                Text="{Binding WriteValue}" />
                        </VerticalStackLayout>

                        <Button
                            BackgroundColor="{StaticResource YellowPrimary}"
                            Command="{Binding ModbusWriteCommand}"
                            Text="쓰기 실행"
                            TextColor="{StaticResource Gray900}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!--  Quick Commands  -->
            <Frame
                Padding="16"
                BackgroundColor="White"
                BorderColor="{StaticResource Gray200}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="빠른 명령" />
                    <Grid
                        ColumnDefinitions="*,*"
                        ColumnSpacing="8"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="8">
                        <Button
                            Grid.Row="0"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding ReadMultipleRegistersCommand}"
                            FontSize="12"
                            Text="레지스터 0-9 읽기"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding ReadCoilsCommand}"
                            FontSize="12"
                            Text="코일 0-7 읽기"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding WriteRegister100Command}"
                            FontSize="12"
                            Text="레지스터 0에 100 쓰기"
                            TextColor="{StaticResource Gray900}" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource Gray200}"
                            BorderWidth="1"
                            Command="{Binding WriteCoilOnCommand}"
                            FontSize="12"
                            Text="코일 0 켜기"
                            TextColor="{StaticResource Gray900}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Statistics  -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <Frame
                    Grid.Column="0"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ModbusReadCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="읽기 횟수"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="1"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ModbusWriteCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="쓰기 횟수"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
                <Frame
                    Grid.Column="2"
                    Padding="12"
                    BackgroundColor="White"
                    BorderColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HasShadow="False">
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Text="{Binding ModbusTotalCount}" />
                        <Label
                            FontSize="10"
                            HorizontalTextAlignment="Center"
                            Text="전체 로그"
                            TextColor="{StaticResource Gray600}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
