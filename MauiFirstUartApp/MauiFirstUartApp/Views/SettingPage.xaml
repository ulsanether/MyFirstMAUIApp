<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.Views.SettingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SettingPage"
    BackgroundColor="{AppThemeBinding Light={StaticResource Background},
                                      Dark={StaticResource DarkBackground}}">

    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="800"
            Spacing="16">

            <!--  Header  -->
            <HorizontalStackLayout Spacing="8">
                <Image
                    HeightRequest="24"
                    Source="settingsicon.png"
                    WidthRequest="24" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="설정"
                    TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                Dark={StaticResource DarkForeground}}" />
            </HorizontalStackLayout>

            <!--  Serial Port Settings  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Image
                            HeightRequest="20"
                            Source="serialporticon.png"
                            WidthRequest="20" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="시리얼 포트 설정"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </HorizontalStackLayout>
                    <Label
                        FontSize="12"
                        Text="일반 시리얼 통신 및 모드버스 RTU/ASCII에 공통으로 사용됩니다."
                        TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                    Dark={StaticResource DarkMutedForeground}}" />

                    <!--  Port Selection  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="포트"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Picker
                            ItemsSource="{Binding PortNames}"
                            SelectedItem="{Binding SelectedPort}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Button
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary},
                                                              Dark={StaticResource DarkPrimary}}"
                            Command="{Binding RefreshPortsCommand}"
                            Text="🔄 포트 갱신"
                            TextColor="{AppThemeBinding Light={StaticResource PrimaryForeground},
                                                        Dark={StaticResource DarkPrimaryForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Baud Rate  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="Baud Rate"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Picker
                            ItemsSource="{Binding BaudRateOptions}"
                            SelectedItem="{Binding SelectedBaudRate}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            Text="시리얼 통신 속도 (bps)"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Data Bits & Stop Bits  -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <VerticalStackLayout Spacing="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="Data Bits"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Entry
                                Keyboard="Numeric"
                                Text="{Binding DataBits}"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="Stop Bits"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Picker
                                ItemsSource="{Binding StopBitsOptions}"
                                SelectedItem="{Binding SelectedStopBits}"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                        </VerticalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Parity  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="Parity"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Picker
                            ItemsSource="{Binding ParityOptions}"
                            SelectedItem="{Binding SelectedParity}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  RTS Enable  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="RTS 활성화"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="Request To Send"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsRtsEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  DTR Enable  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="DTR 활성화"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="Data Terminal Ready"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsDtrEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Modbus Settings  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Image
                            HeightRequest="20"
                            Source="modbusicon.png"
                            WidthRequest="20" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="모드버스 설정"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </HorizontalStackLayout>

                    <!--  Protocol  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="프로토콜"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Picker
                            ItemsSource="{Binding ModbusProtocolOptions}"
                            SelectedIndexChanged="OnModbusProtocolChanged"
                            SelectedItem="{Binding SelectedModbusProtocol}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            Text="시리얼 포트를 통한 통신 (위의 시리얼 포트 설정 사용)"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Slave ID  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="슬레이브 ID"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Entry
                            Keyboard="Numeric"
                            Text="{Binding ModbusSlaveId}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            Text="통신할 장치의 주소 (1-247)"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Timeout  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontAttributes="Bold"
                            FontSize="12"
                            Text="타임아웃 (ms)"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Entry
                            Keyboard="Numeric"
                            Text="{Binding ModbusTimeout}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                        <Label
                            FontSize="10"
                            Text="응답 대기 시간"
                            TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                        Dark={StaticResource DarkMutedForeground}}" />
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Auto Reconnect  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="자동 재연결"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="연결 끊김 시 자동 재연결"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsAutoReconnectEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  CRC Verification  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="CRC 검증"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="데이터 무결성 검증 (RTU only)"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsCrcVerificationEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  General Settings  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Image
                            HeightRequest="20"
                            Source="generalicon.png"
                            WidthRequest="20" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="일반"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </HorizontalStackLayout>

                    <!--  Language  -->
                    <Grid ColumnDefinitions="*,140">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="언어"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="앱 표시 언어"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Picker
                            Grid.Column="1"
                            ItemsSource="{Binding LanguageOptions}"
                            SelectedItem="{Binding SelectedLanguage}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Dark Mode  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="다크 모드"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="어두운 테마 사용"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsDarkModeEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Notification Settings  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Image
                            HeightRequest="20"
                            Source="notificationicon.png"
                            WidthRequest="20" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="알림"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </HorizontalStackLayout>

                    <!--  Connection Notification  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="연결 알림"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="연결 상태 변경 시 알림"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsConnectionNotificationEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Error Notification  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="오류 알림"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="통신 오류 발생 시 알림"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsErrorNotificationEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Sound Notification  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="소리 알림"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="알림 소리 재생"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsSoundNotificationEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Data Settings  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light={StaticResource Card},
                                                  Dark={StaticResource DarkCard}}"
                BorderColor="{AppThemeBinding Light={StaticResource Border},
                                              Dark={StaticResource DarkBorder}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="8">
                        <Image
                            HeightRequest="20"
                            Source="databaseicon.png"
                            WidthRequest="20" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="데이터"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </HorizontalStackLayout>

                    <!--  Auto Save Logs  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="로그 자동 저장"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="통신 로그 자동으로 저장"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsAutoSaveLogsEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Log Retention  -->
                    <Grid ColumnDefinitions="*,140">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="로그 보관 기간"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="로그 파일 보관 기간"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Picker
                            Grid.Column="1"
                            ItemsSource="{Binding LogRetentionOptions}"
                            SelectedItem="{Binding SelectedLogRetention}"
                            TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                        Dark={StaticResource DarkForeground}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  Timestamp Display  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="타임스탬프 표시"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="로그에 시간 정보 표시"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsTimestampDisplayEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Border}, Dark={StaticResource DarkBorder}}" />

                    <!--  HEX Format  -->
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontAttributes="Bold"
                                FontSize="12"
                                Text="HEX 형식 표시"
                                TextColor="{AppThemeBinding Light={StaticResource Foreground},
                                                            Dark={StaticResource DarkForeground}}" />
                            <Label
                                FontSize="11"
                                Text="데이터를 16진수로 표시"
                                TextColor="{AppThemeBinding Light={StaticResource MutedForeground},
                                                            Dark={StaticResource DarkMutedForeground}}" />
                        </VerticalStackLayout>
                        <Switch
                            Grid.Column="1"
                            IsToggled="{Binding IsHexFormatEnabled}"
                            OnColor="{AppThemeBinding Light={StaticResource Primary},
                                                      Dark={StaticResource DarkPrimary}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>