<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiFirstUartApp.Views.InfoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            MaximumWidthRequest="800"
            Spacing="16">

            <!--  Header  -->
            <HorizontalStackLayout Spacing="8">
                <Image
                    HeightRequest="24"
                    Source="infoicon.png"
                    WidthRequest="24" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="정보"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                Dark={StaticResource Gray50}}" />
            </HorizontalStackLayout>

            <!--  App Info Card  -->
            <Frame
                Padding="24"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark={StaticResource Gray900}}"
                BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                              Dark={StaticResource Gray700}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="16">
                    <Frame
                        Padding="0"
                        BackgroundColor="{StaticResource YellowPrimary}"
                        CornerRadius="16"
                        HasShadow="False"
                        HeightRequest="64"
                        WidthRequest="64">
                        <Image
                            HeightRequest="64"
                            Source="appiconw.png"
                            WidthRequest="64" />
                    </Frame>
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        Text="씨투모통"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />
                    <Label
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        Text="Serial &amp; Modbus Communication"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                    Dark={StaticResource Gray300}}" />
                    <Frame
                        Padding="12,6"
                        BackgroundColor="{StaticResource YellowLight}"
                        CornerRadius="16"
                        HasShadow="False">
                        <Label
                            FontSize="12"
                            Text="버전 1.0.0"
                            TextColor="{StaticResource YellowDark}" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!--  Features Card  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark={StaticResource Gray900}}"
                BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                              Dark={StaticResource Gray700}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="주요 기능"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />

                    <HorizontalStackLayout Spacing="12">
                        <BoxView
                            Margin="0,6,0,0"
                            CornerRadius="4"
                            HeightRequest="8"
                            VerticalOptions="Start"
                            WidthRequest="8"
                            Color="{StaticResource YellowPrimary}" />
                        <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                            <Label
                                FontSize="13"
                                Text="일반 시리얼 통신 (RS-232, RS-485)"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                            Dark={StaticResource Gray50}}" />
                            <Label
                                FontSize="11"
                                Text="다양한 Baud Rate 및 파라미터 지원"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                            Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />

                    <HorizontalStackLayout Spacing="12">
                        <BoxView
                            Margin="0,6,0,0"
                            CornerRadius="4"
                            HeightRequest="8"
                            VerticalOptions="Start"
                            WidthRequest="8"
                            Color="{StaticResource YellowPrimary}" />
                        <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                            <Label
                                FontSize="13"
                                Text="모드버스 프로토콜"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                            Dark={StaticResource Gray50}}" />
                            <Label
                                FontSize="11"
                                Text="RTU, TCP, ASCII 모드 지원"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                            Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />

                    <HorizontalStackLayout Spacing="12">
                        <BoxView
                            Margin="0,6,0,0"
                            CornerRadius="4"
                            HeightRequest="8"
                            VerticalOptions="Start"
                            WidthRequest="8"
                            Color="{StaticResource YellowPrimary}" />
                        <VerticalStackLayout HorizontalOptions="FillAndExpand" Spacing="4">
                            <Label
                                FontSize="13"
                                Text="실시간 로그 모니터링"
                                TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                            Dark={StaticResource Gray50}}" />
                            <Label
                                FontSize="11"
                                Text="송수신 데이터 실시간 확인"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                            Dark={StaticResource Gray300}}" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!--  Platform Card  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark={StaticResource Gray900}}"
                BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                              Dark={StaticResource Gray700}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="플랫폼"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Frame
                            Grid.Column="0"
                            Padding="16"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray50},
                                                              Dark={StaticResource Gray800}}"
                            CornerRadius="8"
                            HasShadow="False">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="8">
                                <Image
                                    HeightRequest="48"
                                    Source="androidicon.png"
                                    WidthRequest="48" />
                                <Label
                                    FontSize="13"
                                    HorizontalTextAlignment="Center"
                                    Text="Android"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                Dark={StaticResource Gray50}}" />
                            </VerticalStackLayout>
                        </Frame>
                        <Frame
                            Grid.Column="1"
                            Padding="16"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray50},
                                                              Dark={StaticResource Gray800}}"
                            CornerRadius="8"
                            HasShadow="False">
                            <VerticalStackLayout HorizontalOptions="Center" Spacing="8">
                                <Image
                                    HeightRequest="48"
                                    Source="windowsicon.png"
                                    WidthRequest="48" />
                                <Label
                                    FontSize="13"
                                    HorizontalTextAlignment="Center"
                                    Text="Windows"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                Dark={StaticResource Gray50}}" />
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Technology Stack Card  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark={StaticResource Gray900}}"
                BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                              Dark={StaticResource Gray700}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="기술 스택"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label
                            FontSize="12"
                            Text="프레임워크"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                        Dark={StaticResource Gray300}}" />
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text=".NET MAUI"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                        Dark={StaticResource Gray50}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label
                            FontSize="12"
                            Text="언어"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                        Dark={StaticResource Gray300}}" />
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text="C#"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                        Dark={StaticResource Gray50}}" />
                    </Grid>

                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />

                    <Grid ColumnDefinitions="*,Auto">
                        <Label
                            FontSize="12"
                            Text="라이선스"
                            TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                        Dark={StaticResource Gray300}}" />
                        <Label
                            Grid.Column="1"
                            FontSize="12"
                            Text="MIT"
                            TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                        Dark={StaticResource Gray50}}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!--  Contact Card  -->
            <Frame
                Padding="16"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark={StaticResource Gray900}}"
                BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                              Dark={StaticResource Gray700}}"
                CornerRadius="12"
                HasShadow="False">
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="문의"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                                      Dark={StaticResource Gray700}}"
                        BorderWidth="1"
                        Clicked="OnEmailButtonClicked"
                        HorizontalOptions="FillAndExpand"
                        Text="📧 이메일 보내기 링크"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="{AppThemeBinding Light={StaticResource Gray200},
                                                      Dark={StaticResource Gray700}}"
                        BorderWidth="1"
                        Clicked="OnGitHubButtonClicked"
                        HorizontalOptions="FillAndExpand"
                        Text="🔗 GitHub 저장소 링크"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                    Dark={StaticResource Gray50}}" />
                </VerticalStackLayout>
            </Frame>

            <!--  Footer  -->
            <VerticalStackLayout
                Padding="0,16"
                HorizontalOptions="Center"
                Spacing="8">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="4">

                    <Label
                        FontSize="12"
                        Text="Made with"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                    Dark={StaticResource Gray300}}" />
                    <Label FontSize="12" Text="❤️" />
                    <Label
                        FontSize="12"
                        Text="using .NET MAUI"
                        TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                    Dark={StaticResource Gray300}}" />
                </HorizontalStackLayout>
                <Label
                    FontSize="10"
                    HorizontalTextAlignment="Center"
                    Text="© 2025 All rights reserved"
                    TextColor="{AppThemeBinding Light={StaticResource Gray600},
                                                Dark={StaticResource Gray300}}" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>